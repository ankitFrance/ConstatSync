          <div class="form-row row" style="padding: 5px 0;">

            <div class="form-group col-md-2">

              <select name="tools" multiple="" class="ui fluid dropdown" id="tools">
                <option value="">Select Tools</option>
                <% 
                    // Define the known tools
                    const knownTools = ['Tool 1', 'Tool 2', 'Tool 3', 'Tool 4', 'Tool 5'];
                    const usedTools = report.Reporting_Information.Tools;
            
                    // Combine known tools and used tools, then filter out duplicates
                    const allTools = [...new Set([...knownTools, ...usedTools])];
            
                    // Iterate over all unique tools and create options
                    allTools.forEach(tool => {
                %>
                    <option value="<%= tool %>" <%= usedTools.includes(tool) ? 'selected' : '' %>><%= tool %></option>
                <% }); %>
              </select>
              
             
            </div>
            
            <div class="form-group col-md-2">
              <input type="text" class="form-control" id="exampleInputTextTool" placeholder="Enter new tool">
            </div>
          
